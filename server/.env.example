# Environment Configuration for Lab Record Manager

# Server
NODE_ENV=development
PORT=5000

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/lab_record_manager?schema=public"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS (optional - for notifications)
SMS_API_KEY=
SMS_SENDER_ID=

# Cloud Storage (optional)
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_BUCKET=
# S3_REGION=

# WebRTC/Video Call
TURN_SERVER_URL=
TURN_USERNAME=
TURN_PASSWORD=
